#include <stdint.h>
#include <stdbool.h>
#include "inc/hw_memmap.h"
#include "driverlib/debug.h"
#include "driverlib/gpio.h"
#include "driverlib/sysctl.h"

void RGB_init(void){

    SysCtlPeripheralEnable(SYSCTL_PERIPH_GPIOB);
    while(!SysCtlPeripheralReady(SYSCTL_PERIPH_GPIOF)){}
    GPIOPinTypeGPIOOutput(RED_PORT_BASE, GPIO_PIN_1);
    GPIOPinTypeGPIOOutput(GREEN_PORT_BASE, GPIO_PIN_2);
    GPIOPinTypeGPIOOutput(BLUE_PORT_BASE, GPIO_PIN_3);

}

void RGB_RedLedOn(void){


}
void RGB_BlueLedOn(void){

}
void RGB_GreenLedOn(void){

}

void RGB_RedLedOff(void){

}
void RGB_BlueLedOff(void){

}
void RGB_GreenLedOff(void){

}

